{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "platform": "github",
  "extends": [
    "group:monorepos",
    "group:recommended",
    "packages:react",
    "workarounds:all"
  ],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "minor",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}